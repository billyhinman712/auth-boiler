<h2>sign up</h2>

<form action="/auth/login" method="POST">
	<div class="row">
		<div class="input-feild col s12 m6">
			<label for="firstname">First Name</label>
			<input type="text" id="firstname" name="firstname" class="validate">
		</div>
		<div class="input-feild col s12 m6">
			<label for="lastname">Last name</label>
			<input type="text" id="lastname" name="lastname" class="validate">
		</div>
	</div>
	<div class="row">
		<div class="input-feild col s12 m6">
			<label for="email">Email</label>
			<input type="email" id="email" name="email" class="validate">
		</div>
		<div class="input-feild col s12 m6">
			<label for="password">Password</label>
			<input type="password" id="password" name="password" class="validate">
		</div>
	</div>
	<div class="row">
		<div class="input-feild col s12 m6">
			<label for="dob">Date of Birth</label>
			<input type="date" id="dob" name="dob" class="validate">
		</div>
		<div class="input-feild col s12 m6">
			<label for="image">image Url</label>
			<input type="url" id="image" name="url" class="validate">
		</div>
	</div>
	<a class="waves-effect waves-light btn">Submit</a>
</form>